<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
  <!-- Employee -->
  <class name="employees.Employee" table="employees">
    <id name="empNo" type="int" column="emp_no">
    </id>
    <property name="firstName" type="string" column="first_name" />
    <property name="lastName" type="string" column="last_name" />
    <property name="gender" type="string" column="gender" />
    <property name="birthDate" type="date" column="birth_date" />
    <property name="hireDate" type="date" column="hire_date" />
    <set name="deptEmps" table="dept_emp" fetch="select">
      <key column="emp_no" />
      <one-to-many class="employees.DeptEmp" />
    </set>
    <set name="salaries" table="salaries" fetch="select">
      <key column="emp_no" />
      <one-to-many class="employees.Salary" />
    </set>
    <set name="titles" table="titles" fetch="select">
      <key column="emp_no" />
      <one-to-many class="employees.Title" />
    </set>
    <set name="deptManagers" table="dept_manager" fetch="select">
      <key column="emp_no" />
      <one-to-many class="employees.DeptManager" />
    </set>
  </class>

  <!-- Department -->
  <class name="employees.Department" table="departments">
    <id name="deptNo" type="string" column="dept_no">
    </id>
    <property name="deptName" type="string" column="dept_name" />
    <set name="deptEmps" table="dept_emp" fetch="select">
      <key column="dept_no" />
      <one-to-many class="employees.DeptEmp" />
    </set>
    <set name="deptManagers" table="dept_emp" fetch="select">
      <key column="dept_no" />
      <one-to-many class="employees.DeptManager" />
    </set>
  </class>

  <!-- DeptEmp -->
  <class name="employees.DeptEmp" table="dept_emp">
    <composite-id class="employees.DeptEmpId" name="deptEmptId">
      <key-property name="empNo" type="int" column="emp_no" />
      <key-property name="deptNo" type="string" column="dept_no" />
    </composite-id>
    <many-to-one name="employee" class="employees.Employee" lazy="proxy" column="emp_no" insert="false" update="false" />
    <many-to-one name="department" class="employees.Department" lazy="proxy" column="dept_no" insert="false" update="false" />
  </class>

  <!-- Salaries -->
  <class name="employees.Salary" table="salaries">
    <composite-id class="employees.SalaryId" name="salaryId">
      <key-property name="empNo" type="int" column="emp_no" />
      <key-property name="fromDate" type="date" column="from_date" />
    </composite-id>
    <many-to-one name="employee" class="employees.Employee" lazy="proxy" column="emp_no" insert="false" update="false" />
    <property name="salary" type="int" column="salary" />
    <property name="toDate" type="date" column="to_date" />
  </class>

  <!-- Titles -->
  <class name="employees.Title" table="titles">
    <composite-id  class="employees.TitleId" name="titleId">
      <key-property name="empNo" type="int" column="emp_no" />
      <key-property name="title" type="string" column="title" />
      <key-property name="fromDate" type="date" column="from_date" />
    </composite-id>
    <many-to-one name="employee" class="employees.Employee" lazy="proxy" column="emp_no" insert="false" update="false" />
    <property name="toDate" type="date" column="to_date" />
  </class>

  <!-- DeptManager -->
  <class name="employees.DeptManager" table="dept_manager">
    <composite-id class="employees.DeptManagerId" name="deptManagerId">
      <key-property name="empNo" type="int" column="emp_no" />
      <key-property name="deptNo" type="string" column="dept_no" />
    </composite-id>
    <many-to-one name="employee" class="employees.Employee" lazy="proxy" column="emp_no" insert="false" update="false" />
    <many-to-one name="department" class="employees.Department" lazy="proxy" column="dept_no" insert="false" update="false" />
    <property name="fromDate" type="date" column="from_date" />
    <property name="toDate" type="date" column="to_date" />
  </class>
</hibernate-mapping>